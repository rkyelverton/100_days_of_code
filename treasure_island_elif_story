print("Welcome to Treasure Island.")
print("Your mission is to find the treasure.") 

#https://www.draw.io/?lightbox=1&highlight=0000ff&edit=_blank&layers=1&nav=1&title=Treasure%20Island%20Conditional.drawio#Uhttps%3A%2F%2Fdrive.google.com%2Fuc%3Fid%3D1oDe4ehjWZipYRsVfeAx2HyB7LCQ8_Fvi%26export%3Ddownload

#Write your code below this line ðŸ‘‡
decision1 = input("Do you wish to go left or right? ")
lower_case_decision1 = decision1.lower()

if lower_case_decision1 == "left" or lower_case_decision1 == "l":
  decision2 = input("Do you want to swim or wait? ")
  lower_case_decision2 = decision2.lower()
  if lower_case_decision2 == "wait":
    decision3 = input("Which color door do you wish to enter? ")
    lower_case_decision3 = decision3.lower()
    if lower_case_decision3 == "red":
      print("You have been burned by fire. Game over.")
    elif lower_case_decision3 == "yellow":
      print("You have chosen wisely. You win.")
    elif lower_case_decision3 == "blue":
      print("You have been eaten by a monsterous beast. Game over.")
    else:
      print("Game over.")
  else: 
    print("You have been attacked by killer trout. Game over.")
